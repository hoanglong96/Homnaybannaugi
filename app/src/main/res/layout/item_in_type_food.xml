<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="3dp"
    android:padding="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ln_layout_main_food"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_width="145dp"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            >
            <LinearLayout
                android:id="@+id/ln_layout_cardview"
                android:weightSum="4"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="180dp">
                <LinearLayout
                    android:layout_weight="3.9"
                    android:orientation="horizontal"
                    android:id="@+id/ln_layout_cardview2"
                    android:layout_width="match_parent"
                    android:layout_height="1dip">
                    <FrameLayout
                        android:elevation="10dp"
                        android:id="@+id/frame_layout_1"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/itemImage"
                            android:layout_width="145dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="1dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/background" />
                    </FrameLayout>

                </LinearLayout>
                <LinearLayout
                    android:background="#f9f9f8"
                    android:layout_weight="0.1"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/bb_inActiveBottomBarItemColor"
                        android:layout_marginBottom="0dp"
                        android:layout_width="138dp"
                        android:layout_height="20dp"
                        android:id="@+id/tvTitle"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginLeft="5dp"
                        android:text="Loading.....!!!"
                        android:layout_gravity="left"
                        android:layout_marginTop="6dp"
                        android:paddingEnd="0dp"/>
                    <LinearLayout
                        android:weightSum="4"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginLeft="6dp"
                            android:foregroundGravity="left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/clock_fast_black"
                            android:layout_gravity="left"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/item_time"
                            android:textColor="@color/bb_inActiveBottomBarItemColor"
                            android:text="30p"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_horizontal"
                            android:layout_weight="3"
                            android:paddingBottom="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>
