<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.rufflez.Cookbook.MainActivity"
    android:background="#f7f9f4">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/linerText">
    <TextView
        android:id="@+id/tv"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Chọn nguyên liệu bạn đã mua!"
        android:textStyle="italic"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif-condensed"
        />
    <ImageView
        android:id="@+id/btn_del_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:background="@drawable/delete_forever"
        android:textAllCaps="false"
        />
</RelativeLayout>
<android.support.v7.widget.RecyclerView
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/recycle_shop"
    android:layout_below="@+id/linerText">

</android.support.v7.widget.RecyclerView>

</RelativeLayout>




